{% extends 'base.html.twig' %}

{% block body %}
  <div class="hero">
    <div class="hero-content">
      <div class="decorative-circle left-circle"></div>
      <div class="content-wrapper">
        <h1>Ticket Master</h1>
        <p class="description">Manage your tickets effortlessly with our sleek and powerful app!</p>
        <div class="cta-buttons">
          <a href="{{ path('login') }}" class="login-btn">Login</a>
          <a href="{{ path('signup') }}" class="get-started-btn">Get Started</a>
        </div>
      </div>
      <div class="decorative-circle right-circle"></div>
    </div>
    <div class="wave-section">
      <img src="{{ asset('assets/wave.svg') }}" alt="Wavy background" class="wave">
    </div>
  </div>
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <style>
    .hero {
      position: relative;
      min-height: 100vh;
      background-color: #4facfe;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      padding: 20px;
      overflow: hidden;
    }

    .hero-content {
      max-width: 1440px;
      width: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      position: relative;
      z-index: 1;
    }

    .content-wrapper {
      text-align: center;
      padding: 40px 20px;
      background: rgba(255, 255, 255, 0.1);
      border-radius: 10px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      max-width: 600px;
      z-index: 2;
    }

    h1 {
      color: #fff;
      font-size: 3.5rem;
      margin-bottom: 10px;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }

    .description {
      color: #fff;
      font-size: 1.2rem;
      margin-bottom: 30px;
      text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
    }

    .cta-buttons {
      display: flex;
      gap: 15px;
      justify-content: center;
      flex-wrap: wrap;
    }

    .cta-buttons a {
      padding: 12px 30px;
      background-color: #fff;
      color: #4facfe;
      text-decoration: none;
      border: none;
      border-radius: 25px;
      font-size: 1rem;
      cursor: pointer;
      transition: background-color 0.3s ease, transform 0.2s ease;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }

    .cta-buttons a:hover {
      background-color: #f0f0f0;
      transform: translateY(-2px);
    }

    .login-btn {
      background-color: #3498db;
      color: #fff;
    }

    .login-btn:hover {
      background-color: #2980b9;
    }

    .get-started-btn {
      background-color: #2ecc71;
      color: #fff;
    }

    .get-started-btn:hover {
      background-color: #27ae60;
    }

    .decorative-circle {
      position: absolute;
      border-radius: 50%;
      background: rgba(255, 255, 255, 0.3);
      z-index: 0;
    }

    .left-circle {
      width: 200px;
      height: 200px;
      top: 10%;
      left: 5%;
    }

    .right-circle {
      width: 150px;
      height: 150px;
      bottom: 10%;
      right: 5%;
    }

    .wave-section {
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 150px;
      overflow: hidden;
      z-index: -1;
    }

    .wave {
      width: 100%;
      height: auto;
      display: block;
      position: absolute;
      bottom: 0;
      min-height: 100px;
    }

    @media (max-width: 768px) {
      h1 {
        font-size: 2.5rem;
      }
      .description {
        font-size: 1rem;
      }
      .cta-buttons {
        flex-direction: column;
        width: 100%;
      }
      .cta-buttons a {
        width: 100%;
      }
    }
  </style>
{% endblock %}