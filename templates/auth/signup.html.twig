{% extends 'base.html.twig' %}

{% block body %}
  <div class="hero">
    <div class="login-container">
      <div class="signup-card">
        <h2>Create Your Ticket Master Account</h2>
        <p class="login-subtitle">Join us to manage your tickets!</p>
        {% if error is defined and error %}
          <p style="color: #d9534f;">{{ error }}</p>
        {% endif %}
        <form method="post">
          <input type="email" name="email" placeholder="Email Address" class="input-field" required>
          <input type="password" name="password" placeholder="Password" class="input-field" required>
          <button type="submit" class="login-btn">Sign Up</button>
        </form>
      </div>
    </div>
    <div class="wave-section">
      <img src="{{ asset('assets/wave.svg') }}" alt="Wavy background" class="wave">
    </div>
  </div>
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <style>
    .hero {
      position: relative;
      min-height: 100vh;
      background: linear-gradient(135deg, #6b48ff, #00d4ff);
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
      overflow: hidden;
    }

    .login-container {
      max-width: 1440px;
      width: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 1;
    }

    .signup-card {
      background: rgba(255, 255, 255, 0.95);
      border-radius: 20px;
      padding: 40px;
      width: 100%;
      max-width: 400px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
      text-align: center;
    }

    h2 {
      color: #2c2c54;
      font-size: 2rem;
      margin-bottom: 10px;
    }

    .login-subtitle {
      color: #7f8c8d;
      font-size: 1rem;
      margin-bottom: 20px;
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 15px;
    }

    .input-field {
      padding: 12px;
      border: 2px solid #e0e0e0;
      border-radius: 25px;
      font-size: 1rem;
      outline: none;
    }

    .login-btn {
      padding: 12px;
      background: linear-gradient(90deg, #6b48ff, #00d4ff);
      color: #fff;
      border: none;
      border-radius: 25px;
      font-size: 1.1rem;
      cursor: pointer;
    }

    .wave-section {
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 150px;
      overflow: hidden;
      z-index: -1;
    }

    .wave {
      width: 100%;
      height: auto;
      display: block;
      position: absolute;
      bottom: 0;
      min-height: 100px;
    }

    @media (max-width: 768px) {
      .signup-card {
        padding: 20px;
        max-width: 90%;
      }
      h2 {
        font-size: 1.5rem;
      }
    }
  </style>
{% endblock %}